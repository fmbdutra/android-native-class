<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".primeiraActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0sp"
        android:orientation="vertical"
        android:visibility="visible">

    <TextView
        android:id="@+id/firstAct"
        android:text="firstAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="0px"
        android:layout_marginTop="10sp"
        tools:text="@string/primeiraActivity" />

    <Button
        android:id="@+id/botaoAbreSegundaAct"
        android:onClick="abreSegunda"
        android:text="@string/abresegundaact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0px"
        android:layout_marginTop="2sp"
         />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>